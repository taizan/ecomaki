<%= stylesheet_link_tag 'novel' %>
<%= stylesheet_link_tag 'entry' %>
<%= stylesheet_link_tag 'entryItem' %>
<%= stylesheet_link_tag 'overlay' %>

<div id="novel_container">


  <aside id="side_menu" >
    <ul class = "well sidebar-nav" id = "chapterList">
    </ul>
  </aside>
  <aside class = "well sidebar-nav" id="picker">
    <ul id = "pickerList" class = "nav nav-list">
      <li class="nav-header">New File Upload</li>
      <input id="character_upload" type="file" name="character_image" data-url="/characters" multiple>
      <li class="nav-header">Selecct Image from Libraly</li>
      <li><button class="btn" id ="pickerCancelBtn">cancel</button></li>
    </ul>
  </aside>

  <div id="content" >
  </div>
  
  <div id="console">
    <h3>console:<textarea id="command_line" class="span12" rows="1" ></textarea></h3>
  </div>
</div>


<script type="text/template" id="novel_template">
  <br>

  <div id="title" class="title">
    <h2 class="help  editer_item">[[novel title]]</h2>
    <h2 class="text">novel title</h2>
  </div>
  <div id="description" class="description">
    <p class="help  editer_item">[[novel description]]</p>
    <p class="text">des</p>
  </div>
  
  <div class="buttons editer_item">
    <button id="add_chapter" class="btn add_chapter"> 
      +chapter 
    </button>
  </div>

  <div class="chapterList">
  </div>

</script>

<script type="text/template" id="chapter_template">
  <br>

  <div class="title">
    <h2 class="help editer_item">[[chapter title]]</h2>
    <h2 class="text">chapter title</h2>
  </div>
  <div class="description">
    <p class="help editer_item">[[chapter description]]</p>
    <p class="text">des</p>
  </div>
  <div class="selecter_item editer_item">
    background
    <select class="background_select"></select>
    bgm
    <select class="bgm_select">
      <option name="bgm" value="">なし</option>
      {% ['dream', 'flower', 'orange'].forEach(function(name, i) { %}
      <option name="bgm" value="{{ i + 1 }}">{{ name }}</option>
      {% }); %}
    </select>
  </div>

  <div class="entryList">
  </div>

  <div class="buttons editer_item">
    <button class="btn add_entry">
      +entry 
    </button>
    <button class="btn add_chapter"> 
      +chapter 
    </button>
    <button class="btn remove_chapter"> 
      remove chapter 
    </button>
  </div>

</script>

<script type="text/template" id="entry_template">
  <div class="entry-content">
    <canvas width= "800" height="300" ></canvas>
  </div>
  <div class="buttons editer_item">
    <li><i class="icon-move" /></li>
    <li><button class="btn --btn-remove"><i class="icon-remove-sign" /></button></li>
    <li><button class="btn --btn-baloon"><i class="icon-comment" /></button></li>
    <li><button class="btn --btn-picture"><i class="icon-picture" /></button></li>
    <li><button class="btn --btn-layer"><i class="icon-edit" /></button></li>
    <li><button class="btn --btn-entry"><i class="icon-arrow-down" /></button></li>
  </div>
</script>

<script type="text/template" id="baloon_template">
  <p class="--baloon-text"> {{ text }} </p>
</script>

<script type="text/template" id="picture_template">
  <img class="--picture-img "  > </img>
</script>
