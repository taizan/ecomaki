  <div id="content"> </div>


  <ul class="side_buttons">
    <li>
      <form action="/novels/<%= @novel.id%>/dup" method="post">
      <input class="img_over" type="image" src="/assets/top/edit_button_off.png" value='submit' id="spine_off"  title="コピーしてスピンオフを作る。; Make Spin off">
      </input>
      </form>
    </li>
  </ul>
</div>

