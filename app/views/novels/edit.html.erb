          <input id="background_upload" type="file" name="image" data-url="/background_images" multiple>
        </ul>
        <button class="btn upload_button" id ="character_upload_button"><img src="/assets/novel/upload.png" ></button>
        <button class="btn upload_button" id ="background_upload_button"><img src="/assets/novel/upload.png" ></button>
        <button class="btn upload_button" id ="music_upload_button"><img src="/assets/novel/upload.png" ></button>
    </div>

    
      <button class="btn" id ="picker_cancel_button"><img src="/assets/novel/remove.png" ></button></li>
  </aside>

