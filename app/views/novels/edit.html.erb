<div id="novel_container">

  <button id="preview" title="Preview"><img src="/assets/novel/preview.png"></button>

  <aside id="side_menu" >
    <ul class = "well sidebar-nav" id = "chapterList">
    </ul>
  </aside>
  
  <!-- picker menu  -->
  <aside class = "well sidebar-nav" id="picker">
      <ul>
        <li><a href="#list_tab"><i class="icon-user"></i>LIST</a></li>
        <li><a href="#upload_tab"><i class="icon-upload"></i>UPLOAD</a></li>
      </ul>
