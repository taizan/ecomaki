<%= javascript_include_tag 'novelEdit' %>

<% content_for :html_title, @novel.title %>
<% content_for :html_description, @novel.description %>

<img id="background_odd" class="background" src="/assets/0.png" />
<img id="background_even" class="background" src="/assets/0.png" />

<div class="novel_container" id="<%= @novel.id%>">

  <!-- tutorial button -->
  <button id="tutorial_button" class="btn" title="チュートリアル">
    <img src="/assets/novel/wakaba.png">
    <p>Tutorial</p>
  </button>

  <!-- プレビューボタン -->
  <button id="preview_button" class="btn" title="Preview">
    <img src="/assets/novel/preview.png">
    <p>Preview</p>
  </button>

  <!-- 公開ボタン -->
  <a id="publish_button" class="btn btn-info" width="80px" href="/novel/<%= @novel.id %>" title="公開 publish">
    <img src="/assets/novel/publish.png">
    <p>PUBLISH</p>
  </a>


  <aside id="side_menu" >
    <ul class = "well sidebar-nav" id = "chapterList">
    </ul>
  </aside>
  

  <!-- Main content container  -->
  <div id="content" >
  </div>
  
  <div id="console">
    <h3>console:<textarea id="command_line" class="span12" rows="1" ></textarea></h3>
  </div>
</div>

