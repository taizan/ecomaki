<%= stylesheet_link_tag 'index' %>
<%= javascript_include_tag 'index' %>

<div class="top_menu">

  <button id="create_button" title="新規作成！！"><img src="/assets/novel/brush.png"></button>

  <div class="well">
    <%= form_tag :controller => :novels, :action => :create do %>
      <%= submit_tag "create a new novel", :class => "btn" %>
    <% end %>
  </div>

  <div class="well">
    <ul>
      <% @novels.each do |novel| %>
        <li>
          <%= link_to "##{novel.id}", :controller => :novels, :action => :show, :id => novel.id %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<script type="text/template" id="novel_form_template">
  <form class="init_form form-horizontal">
    
    <div class="control-group">
      <label class="control-label" for="inputTitle">Title:</label>
      <div class="controls">
        <input type="text" id="inputTitle" placeholder="title" name="title" >
      </div>

      <label class="control-label" for="inputDescription">Description:</label>
      <div class="controls">
        <input type="text" id="inputDescription" placeholder="description" name="description" >
      </div>

      <label class="control-label" for="inputAuther">Auther:</label>
      <div class="controls">
        <input type="text" id="inputAuther" placeholder="auther" name="author" >
      </div>

      <div class="controls">
        
        <label class="checkbox">
          <input type="checkbox"> I'm agree
        </label>
        
        <button  type="submit" class="btn btn-primary">ok</button>
        <button  type="button" class="btn cancel_button">cancel</button>
      
      </div>
    </div>

  </form>
</script>
